<!-- Styles -->
<style>
    body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    .navigation_uls_wrapper {
        top: 0;
        background-color: white;
        box-shadow: 0px 4px 10px -4px rgba(0, 0, 0, 0.25);
        padding: 5px;
        height: 50px;
    }
    .navigation_uls_container {
        display: inline-flexbox;
        height: max-content;
    }
    .navigation_uls_container .side_uls_logo {
        float: left;
        padding: 5px 10px;
        font-size: 25px;
        background: linear-gradient(to left, rgb(0, 195, 255), rgb(0, 255, 0));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-top: 5px;
    }
    .navigation_uls_container .uls_navigation_right {
        float: right;
        vertical-align: -webkit-baseline-middle;
        vertical-align: middle;
        list-style-type: none;
        font-weight: bold;
        margin-top: 5px;
    }
    .navigation_uls_container .uls_navigation {
        float: left;
        vertical-align: -webkit-baseline-middle;
        vertical-align: middle;
        list-style-type: none;
        font-weight: bold;
        margin-top: 5px;
    }
    .uls_navigation_right li,
    .uls_navigation li {
        display: inline-block;
        padding: 10px;
    }
    .uls_navigation_right li:hover,
    .uls_navigation li:hover {
        background-color: rgb(218, 218, 218);
        border-radius: 8px;
    }
    .uls_navigation_right li a,
    .uls_navigation li a {
        color: black;
    }
    .uls_navigation_right {
        float: right;
    }
</style>
<!-- Navigation -->
<script src="https://kit.fontawesome.com/d16b5914e6.js" crossorigin="anonymous"></script>
<div class="navigation_uls_wrapper">
    <div class="navigation_uls_container">
        <h2 class="side_uls_logo">ESCHOOL</h2>
        <ul class="uls_navigation">
            <li class="navigation_item">
                <a href="/home"><i class="fa fa-home"></i></a>
            </li>
            <li class="navigation_item">
                <a href="/classes"><i class="fa fa-pencil"></i></a>
            </li>
            <li class="navigation_item">
                <a href="/timetable"><i class="fa fa-calendar"></i></a>
            </li>
        </ul>
        <ul class="uls_navigation_right">
            <% if(user) { %>
                <li class="navigation_item">
                <a href="/account"><i class="fa fa-user-circle"></i> <%= user.username %></a>
            </li>
           <% } %>
        </ul>
    </div>
</div>