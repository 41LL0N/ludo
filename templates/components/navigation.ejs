<!-- Styles -->
<style>
    body {
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    .navigation_uls_wrapper {
        padding: 5px;
        height: 50px;
        z-index: 999;
        background-color: rgba(0, 0, 0, 0.555);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        top: 0;
        position: fixed;
        width: 100%;
    }

    .navigation_uls_wrapper i {
        color: white;
    }

    .navigation_uls_container {
        display: inline-flexbox;
        height: max-content;
    }
    .navigation_uls_container .side_uls_logo {
        float: left;
        padding: 5px 10px;
        font-size: 25px;
        background: linear-gradient(to left, rgb(0, 195, 255), rgb(0, 255, 0));
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-top: 5px;
    }
    .navigation_uls_container .uls_navigation_right {
        float: right;
        vertical-align: -webkit-baseline-middle;
        list-style-type: none;
        font-weight: bold;
        margin-top: 1px;
    }
    .navigation_uls_container .uls_navigation {
        float: left;
        vertical-align: -webkit-baseline-middle;
        vertical-align: middle;
        list-style-type: none;
        font-weight: bold;
        margin-top: 5px;
    }
    .uls_navigation_right li,
    .uls_navigation li {
        display: inline-block;
        padding: 10px;
        transition-duration: 400ms;
        border-radius: 8px;
    }
    .uls_navigation_right li:hover,
    .uls_navigation li:hover {
        box-shadow: 0px 0px 20px -4px rgba(0, 0, 0, 0.507);
        transition-duration: 400ms;
        transform: translateY(-3px);
    }
    .uls_navigation_right li a,
    .uls_navigation li a {
        color: black;
    }
    .uls_navigation_right {
        float: right;
    }

    .profile_name {
        float: right;
        margin-top: 4px;
        margin-left: 3px;
        margin-bottom: -5px;
        color: white;
    }
</style>
<!-- Navigation -->
<script src="https://kit.fontawesome.com/d16b5914e6.js" crossorigin="anonymous"></script>
<div class="navigation_uls_wrapper" id="navbar">
    <div class="navigation_uls_container">
        <h2 class="side_uls_logo">ESCHOOL</h2>
        <ul class="uls_navigation">
            <li class="navigation_item">
                <a href="/home"><i class="fa fa-home"></i></a>
            </li>
            <li class="navigation_item">
                <a href="/classes"><i class="fa fa-pencil"></i></a>
            </li>
            <li class="navigation_item">
                <a href="/schedule"><i class="fa fa-calendar"></i></a>
            </li>
        </ul>
        <ul class="uls_navigation_right">
                <li class="navigation_item" class="profile">
                <% if(user) { %>
                    <a href="/account">
                        <img src="<%= user.avatar %>" alt="<%= user.username %>" width="30px" style="border-radius: 360px;">
                        <h4 class="profile_name"><%= user.firstName %></h4>
                    </a>
               <% } else { %>
                    <a href="/account"><i class="fa fa-user-circle"></i></a>
                <% } %>
            </li>
        </ul>
    </div>
</div>
